# PowerAutomation 环境变量配置

# API Keys
CLAUDE_API_KEY=your_claude_api_key_here
KIMI_API_KEY=your_kimi_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# 服务器配置
HOST=localhost
PORT=8000
WEBSOCKET_PORT=8001
MCP_SERVER_PORT=8765

# 数据库配置
DATABASE_URL=sqlite:///./powerautomation.db
MEMORY_DATABASE_URL=sqlite:///./memory.db

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/powerautomation.log

# 安全配置
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Claude Code Tool配置
CLAUDE_CODE_EXECUTABLE=claude-code
CLAUDE_CODE_WORKSPACE=/tmp/claude-code-workspace

# 工作流配置
WORKFLOW_TIMEOUT=3600
MAX_CONCURRENT_WORKFLOWS=10
WORKFLOW_RETRY_ATTEMPTS=3

# Memory RAG配置
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_INDEX_TYPE=faiss
MAX_MEMORY_SIZE=10000
MEMORY_CLEANUP_INTERVAL=3600

# 监控配置
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# 开发配置
DEBUG=false
RELOAD=false
WORKERS=1